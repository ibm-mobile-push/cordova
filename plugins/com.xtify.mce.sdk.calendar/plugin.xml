<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="com.xtify.mce.sdk.calendar"
version="3.4.0">
  <name>Calendar Action for IBM MCE Cordova Plugin</name>
  <author>IBM MCE</author>
  <description>Calendar Action for IBM MCE Push Services</description>
  <keywords>mce</keywords>
  <license>Apache 2.0 License</license>
  <engines>
    <engine name="cordova" version=">=3.0" />
  </engines>
  <js-module src="MCECalendarPlugin.js" name="MCECalendarPlugin">
    <clobbers target="MCECalendarPlugin" />
  </js-module>
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="MCECalendarPlugin" >
                <param name="ios-package" value="MCECalendarPlugin"/>
            </feature>
        </config-file>    
        <framework src="EventKit.framework" />
        <framework src="EventKitUI.framework" />
        <header-file src="src/ios/MCECalendarPlugin.h" />
        <source-file src="src/ios/MCECalendarPlugin.m" />
    </platform>
    <platform name="android">
        <source-file src="src/android/ibm-mobile-push-android-sdk-plugin-calendar-3.7.0.0.jar" target-dir="libs" framework="false" />
        <source-file src="src/android/assets/mce/plugins/calendar.json" target-dir="assets/mce/plugins" framework="false" />
    </platform>
</plugin>