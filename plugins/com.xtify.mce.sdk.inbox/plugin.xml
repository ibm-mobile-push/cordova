<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="com.xtify.mce.sdk.inbox"
version="3.6.3">
    <name>Inbox Action for IBM MCE Cordova Plugin</name>
    <author>IBM MCE</author>
    <description>Inbox Action for IBM MCE Push Services</description>
    <keywords>mce</keywords>
    <license>Apache 2.0 License</license>
    
    <engines>
        <engine name="cordova" version=">=3.0" />
    </engines>
    
    <js-module src="MCEInboxPlugin.js" name="MCEInboxPlugin">
        <clobbers target="MCEInboxPlugin" />
    </js-module>
        
    <js-module src="js/MCEInbox.js" name="MCEInbox">
        <clobbers target="MCEInbox" />
    </js-module>

    <js-module src="js/MCEDefaultInbox.js" name="MCEDefaultInbox">
        <clobbers target="MCEDefaultInbox" />
    </js-module>

    <js-module src="js/MCEPostInbox.js" name="MCEPostInbox">
        <clobbers target="MCEPostInbox" />
    </js-module>
    
    <js-module src="js/jquery.inview.js" name="jquery-inview">
        <clobbers target="jquery-inview" />
    </js-module>
  
    <hook type="after_plugin_install" src="scripts/after_plugin_install.js" />

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="MCEInboxPlugin" >
                <param name="ios-package" value="MCEInboxPlugin"/>
            </feature>
        </config-file>    
        <header-file src="src/ios/MCEInboxPlugin.h" />
        <source-file src="src/ios/MCEInboxPlugin.m" />
    </platform>
    
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/widget">
            <feature name="MCEInboxPlugin">
                <param name="android-package" value="com.ibm.mce.plugin.cordova.inbox.MceCordovaInboxPlugin" />
            </feature>
        </config-file>

        <source-file src="src/android/ibm-mobile-push-android-cordova-inbox-3.7.1.2.11.jar" target-dir="libs" framework="false" />
        <source-file src="src/android/ibm-mobile-push-android-js-inbox-3.7.1.2.11.jar" target-dir="libs" framework="false" />
        
    </platform>
</plugin>
